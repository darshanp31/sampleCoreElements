<mvc:View controllerName="sampleCoreElements.sampleCoreElements.controller.homePage" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true"
	xmlns="sap.m">
	<Shell id="shell">
		<App >
			<pages>
				<Page id="page">
					<content>
						<TileContainer id="container" 
						               tileDelete="handleTileDelete" 
						               tiles="{optionForUsers>/TileCollection}">
							<StandardTile icon="{optionForUsers>icon}" 
							              type="{optionForUsers>type}" 
							              number="{optionForUsers>number}" 
							              numberUnit="{optionForUsers>numberUnit}" 
							              title="{optionForUsers>title}" 
							              info="{optionForUsers>info}" 
							              infoState="{optionForUsers>infoState}"
							              press= "onPress"
							              />
						</TileContainer>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>